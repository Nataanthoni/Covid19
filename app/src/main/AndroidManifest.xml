<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kweracodes.covid19">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GlobalStatistics"
            android:label="Global Statistics"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".MainActivity" />
        <activity android:name=".Welcome"
            android:label=""
            android:theme="@style/MyIntroTheme"/>
        <activity android:name=".VerifyPhone"
            android:label="Verify Phone"/>

        <activity
            android:name=".SplashActivity"
            android:theme="@style/MyIntroTheme"
            android:label="Covid19">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>