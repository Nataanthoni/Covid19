<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="background">@color/white</item>

    </style>

    <!--Styles the intro activity -->
    <style name="theme.Introtheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>

    </style>

    //Handles the full size of the splash activity

    <style name="MyIntroTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>

        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:navigationContentDescription">@color/colorPrimary</item>
        <item name="android:windowLightNavigationBar">@color/colorPrimary</item>

        <item name="actionBarStyle">@style/theme.Introtheme</item>
        <item name="android:actionBarStyle">@style/theme.Introtheme</item>

    </style>
</resources>
